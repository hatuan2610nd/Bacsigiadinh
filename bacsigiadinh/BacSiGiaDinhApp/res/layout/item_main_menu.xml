<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/transparent" >

    <ImageView
        android:id="@+id/item_menu_image"
        android:layout_width="@dimen/menu_item_image_size"
        android:layout_height="@dimen/menu_item_image_size"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_benh" />

    <TextView
        android:id="@+id/item_menu_title"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/item_menu_image"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/menu_item_text_size"
        android:textColor="@android:color/white" />

</RelativeLayout>